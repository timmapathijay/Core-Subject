/*
DDL : Data Definition Language 
It is used to define the database schema 
Create , Alter , Drop 
*/
/* To Create Table */
Create table Emp(
id int,
name varchar2(20),
salary number(10)
);
desc Emp;
/* Alter (Modification in structure) */
/* Add Column/s*/
Alter table Emp Add address varchar2(30);
/*Remove Column/s */
Alter table Emp drop column address;
/*Modify datatype*/
Alter table Emp modify id varchar2(5);
/* Rename */
Alter table Emp rename column id to roll_no;
/* Add Constraint */
Alter table Emp add primary key(roll_no);
/*Constraints in SQL 
1)Unique
2)Not Null
3)Primary Key
4)check
5)default
6)Foreign Key*/

